{
  "name": "nestjs-mons",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "env-cmd -f .env nest start",
    "predev": "npm run prebuild && npm run migration:run:dev",
    "migration:run:dev": "env-cmd -f .env.develop npm run typeorm -- migration:run",
    "dev": "env-cmd -f ./.env.develop nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "env-cmd -f .env node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:setup": "env-cmd -f .env.test ts-node src/script/create-test-database.ts && env-cmd -f .env.test ts-node src/script/import-test-database.ts",
    "migration:run:test": "env-cmd -f .env.test npm run typeorm -- migration:run",
    "pretest": "npm run test:setup && npm run migration:run:test",
    "test": "env-cmd -f .env.test jest --watch",
    "test:verbose": "env-cmd -f .env.test jest --watch --verbose",
    "pretypeorm": "ts-node -r tsconfig-paths/register src/script/write-type-orm-config.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "posttypeorm": "ts-node src/script/delete-type-orm-config.ts",
    "migration:create": "env-cmd -f .env.test npm run typeorm -- migration:create -n",
    "migration:run:prod": "env-cmd -f .env npm run typeorm -- migration:run"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.13",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.13",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.13",
    "@nestjs/platform-socket.io": "^7.6.17",
    "@nestjs/typeorm": "^7.1.5",
    "@nestjs/websockets": "^7.6.17",
    "@nestjs/schedule": "^1.0.2",
    "@types/bcryptjs": "^2.4.2",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cache-manager": "^3.6.0",
    "env-cmd": "^10.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mysql-import": "^5.0.21",
    "mysql2": "^2.2.5",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.17.11",
    "@types/cron": "^1.7.3",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.31",
    "@types/multer": "^1.4.7",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "jest": {
    "globalSetup": "<rootDir>/__tests__/setup.ts",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
